<div class="mt-4">
    <h3>Sửa khóa học</h3>
    <form method="POST" action="/product/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name-id">Name</label>
            <input type="text" class="form-control" id="name-id" name="name" value="{{product.title}}" >
        </div>
        <div class="form-group">
            <label for="Description-id">Description</label>
            <input type="text" class="form-control" id="Description-id" name="description" value="{{product.description}}">
        </div>
        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>